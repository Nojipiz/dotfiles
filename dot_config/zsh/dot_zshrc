DISABLE_UNTRACKED_FILES_DIRTY="true"

# User configuration
# Exports
export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH=~/.npm-global/bin:$PATH
export PATH=~/.local/bin:$PATH
export PATH="$PATH:/home/nojipiz/.local/share/coursier/bin"
export LANG='es_CO.utf8'
export EDITOR='nvim'
export VISUAL='nvim'

# Git commands
alias g='lazygit'
alias gs='git switch'
alias gp='git push'
alias gpl='git pull'

# Directory commands
alias ls='ls --color=auto'
alias sl='ls --color=auto'
alias l='ls -a --color=auto'
alias ll='ls -la'
alias c='clear'

# Lunarvim Fast
alias v='lvim'

eval "$(starship init zsh)"
